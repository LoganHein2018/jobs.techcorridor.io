<% position = job_engine.position %>

<% wrap_layout :layout do %>
  <%= partial :position, locals: { position: position } %>

  <%= yield %>

  <p>
    <% if position.has_source_url? %>
      <%= link_to "Apply at #{position.source_hostname}",
        position.source_url,
        class: 'btn btn-primary btn-lg',
        target: '_blank' %>
    <% end %>
  </p>

  <hr />

  <p>
    Propose changes to this position:

    <%= link_to 'Edit',
      job_engine.edit_position_url(position),
      class: 'btn btn-xs btn-default',
      target: '_blank' %>

    <%= link_to 'Delete',
      job_engine.delete_position_url(position),
      class: 'btn btn-xs btn-danger',
      target: '_blank' %>
  </p>

  <hr />
<% end %>
